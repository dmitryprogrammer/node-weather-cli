{
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist"],
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["ES6"],
    "allowJs": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": false
  }
}
